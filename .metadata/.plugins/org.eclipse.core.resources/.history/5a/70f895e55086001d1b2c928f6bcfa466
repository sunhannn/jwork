
public class Opclass {
/* 전위 ++항, --항
 * 후위 : 항++, 항--
 * 
 */
	public static void main(String[] args) {
		int a = 3;
		++a;	// a = a+1;
		System.out.println("1 : "+a);
		a--;	// 대입 연산자가 우선이니깐 후위 연산자를 나중에 계산함.
		System.err.println("2: "+a);
		
		int x = 5;
		int y = ++x;
		System.out.println("3: "+x+" "+y);
		
		int x2 = 5;
		int y2 = x2++;
		System.out.println("4: "+x2+" "+y2);
		
		
	}

}
