package com.practice;
import java.util.*;
public class Practice010 {

	public static void main(String[] args) {
		
		boolean run = true;
		
		int balance = 0;
		
		Scanner sc= new Scanner(System.in);
		
		while (run)	{
			System.out.println("-------------------------------------------");
			System.out.println("1. 예금 | 2. 출금 | 3. 잔고 | 4. 종료");
			System.out.println("-------------------------------------------");
			System.out.print("선택> ");
			balance = sc.nextInt();
			int money = 0, mi = 0;
			
			
			switch (balance) {
			case 1 : System.out.println("예금액> "); money = sc.nextInt();
			case 2 :  System.out.println("출금액> "); mi = sc.nextInt(); money -= mi;
			case 3 : System.out.println("잔고> "+money);
			case 4 : break;
			
			}
			
			
		}
		System.out.println("프로그램 종료");
		
		
		
		
	}

}
